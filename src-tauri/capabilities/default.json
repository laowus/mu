{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Tauri 2 默认权限配置",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.qq.com/**"
        },
        {
          "url": "http://*.qq.com/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-cache-read",
      "allow": [
        {
          "path": "$APPCACHE/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-cache-write",
      "allow": [
        {
          "path": "$APPCACHE/**/*"
        }
      ]
    }
  ]
}
